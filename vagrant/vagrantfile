Vagrant.configure("2") do |config|

  # VirtualBox
  config.vm.hostname = "RCTrials-Research-Server"
  config.vm.box = "debian/jessie64"

  # Network
  config.vm.network :forwarded_port, guest: 80, host: 8081
  config.vm.network :forwarded_port, guest: 443, host: 8444

  # System settings
  config.vm.provider "virtualbox" do |vb|
    vb.name = "RCTrials Research Server"
    vb.memory = "1024"
    vb.cpus = 1
  end

  # System Time
  config.vm.provision :shell, :inline => "sudo rm /etc/localtime && sudo ln -s /usr/share/zoneinfo/America/Toronto /etc/localtime", run: "always"

  # Provisioning script
  config.vm.provision :shell, path: "provision.sh"

  # Synced folders:
  ## App Server source
  config.vm.synced_folder "../src", "/var/www/html", type: "rsync", rsync__exclude: [".git/", "vendor/"]
  ## Database
  config.vm.synced_folder "../db", "/sql", type: "rsync", rsync__exclude: ".git/"

end
